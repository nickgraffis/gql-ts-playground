{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}